<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Read</title>
  </head>
  <style>
    table,
    th,
    td {
      border: 1px solid #b0a7a7;
      border-collapse: collapse;
      margin-top: 20px;
      padding: 12px 18px;
    }
    .btn-edit {
      background: orange;
      outline: none;
      height: 30px;
      border: none;
      width: 60px;
      border-radius: 5px;
      cursor: pointer;
    }
    .btn-delete {
      background: rgb(240, 49, 49);
      outline: none;
      height: 30px;
      border: none;
      width: 60px;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
  <body>
    <table style="width: 100%">
      <tr>
        <th>Email</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Action</th>
      </tr>

      <% for(var i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td><%= dataTable[i].phonenumber %></td>
        <td>
          <a href="/edit-crud?id=<%= dataTable[i].id %>">
            <button type="button" class="btn-edit">Edit</button></a
          >
          <a href="/delete-crud?id=<%= dataTable[i].id %>">
            <button type="button" class="btn-delete">Delete</button></a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
